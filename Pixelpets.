        // Set the dynamic title and back link based on URL parameters (optional but good practice)
        document.addEventListener('DOMContentLoaded', () => {
            const params = new URLSearchParams(window.location.search);
            const gameName = params.get('game') || 'Pixel Pet Adventures'; 
            document.title = gameName + ' Detail - Gurnoor';
            document.getElementById('game-title').textContent = gameName;
        });
    </script>
